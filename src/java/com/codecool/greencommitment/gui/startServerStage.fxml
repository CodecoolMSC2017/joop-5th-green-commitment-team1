   <children>
      <ImageView fitHeight="518.0" fitWidth="647.0" layoutX="-2.0" pickOnBounds="true">
         <image>
            <Image url="@../background.gif" />
         </image>
      </ImageView>
      <Label layoutX="310.0" layoutY="41.0" text="Port" textFill="WHITE">
